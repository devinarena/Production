<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="575.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.imunsmart.Controller">
  <top>
    <TabPane prefHeight="576.0" prefWidth="600.0">
      <Tab fx:id="tabProductLine" text="Product Line">
        <AnchorPane prefHeight="505.0" prefWidth="600.0">
          <GridPane alignment="CENTER" prefHeight="316.0" prefWidth="600.0">
            <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Product Name" GridPane.halignment="CENTER"
              GridPane.valignment="CENTER"/>
            <TextField fx:id="tfProductName" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.hgrow="SOMETIMES"
              GridPane.valignment="CENTER">
              <GridPane.margin>
                <Insets left="20.0" right="20.0"/>
              </GridPane.margin>
            </TextField>
            <Label text="Manufacturer" GridPane.halignment="CENTER"
              GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
            <TextField fx:id="tfManufacturer" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="1"
              GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
              <GridPane.margin>
                <Insets left="20.0" right="20.0"/>
              </GridPane.margin>
            </TextField>
            <Label text="Item Type" GridPane.halignment="CENTER"
              GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
            <ChoiceBox fx:id="chbItemType" prefWidth="150.0" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="2"
              GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
              <GridPane.margin>
                <Insets left="20.0" right="20.0"/>
              </GridPane.margin>
            </ChoiceBox>
          </GridPane>
          <GridPane layoutY="348.0" prefHeight="162.0" prefWidth="581.0">
            <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Existing Products"
              GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
            <TableView fx:id="tblvwExistingProducts" prefHeight="200.0" prefWidth="252.0"
              GridPane.columnIndex="1">
              <columns>
                <TableColumn prefWidth="75.0" text="C1"/>
                <TableColumn prefWidth="75.0" text="C2"/>
              </columns>
              <GridPane.margin>
                <Insets left="20.0" right="20.0"/>
              </GridPane.margin>
            </TableView>
          </GridPane>
          <Button fx:id="btnAddProduct" alignment="CENTER" contentDisplay="CENTER"
            layoutX="255.0" layoutY="300.0" mnemonicParsing="false" onAction="#addProduct"
            text="Add Product"/>
        </AnchorPane>
      </Tab>
      <Tab fx:id="tabProduce" text="Produce">
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
          <Label layoutX="252.0" layoutY="42.0" text="Choose Product"/>
          <ListView fx:id="lstvwChooseProduct" layoutX="200.0" layoutY="96.0" prefHeight="152.0"
            prefWidth="200.0"/>
          <GridPane layoutY="223.0" prefHeight="50.0" prefWidth="330.0">
            <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
          </GridPane>
          <Button fx:id="btnRecordProduction" layoutX="237.0" layoutY="394.0"
            mnemonicParsing="false" onAction="#recordProduction" text="Record Production"/>
          <Label layoutX="150.0" layoutY="324.0"
            text="Choose Quantity"/>
          <ComboBox fx:id="cmbxChooseQuantity" layoutX="325.0" layoutY="319.0"
            prefWidth="150.0"/>
        </AnchorPane>
      </Tab>
      <Tab fx:id="tabProductionLog" text="Production Log">
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
          <TextArea fx:id="taProductionLog" prefHeight="515.0" prefWidth="600.0"/>
        </AnchorPane>
      </Tab>
    </TabPane>
  </top>
  <stylesheets>
    <URL value="@production_style.css"/>
  </stylesheets>
</BorderPane>
